<script type="text/javascript">
    $(function () {
        $('.subs').click(function () {
            var title = $('.txt').val();
            if(title == '请输入标题...'){
                alert('请输入标题...');
                return ;
            }
            var textarea = $("textarea:first").val();
            if(textarea == '请输入分享内容（不能少于20字）'){
                alert('请输入分享内容（不能少于20字）');
                return;
            }
            
            setTimeout(popup, 5000);
        });
        function popup() {
            $('.tips').css('position', 'fixed');
            $('.outbra,.tips').removeClass('disn');
            var countdown = 3;
            setInterval(function () {
                --countdown;
                if (countdown > 1) {
                    $('.tips p').text(countdown + '秒后自动返回首页');
                } else if (countdown == 1) {
                    $('.tips p').text('正在返回首页...');
                } else {
                    location.href = 'http://ask.9939.com/jingyan/';
                }

            }, 1000);
        }
    });
</script>
